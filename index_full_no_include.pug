        .footer
            .row
                .footer-copyright Copyright &copy; 2019 by Arturro Torres Sukiennik | Wipro
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src='src/js/main.js')