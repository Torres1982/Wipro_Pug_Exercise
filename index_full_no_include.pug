doctype html
html(lang='en')
    head
        title Week 1 - Assessment
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial scale=1.0')
        link(rel='stylesheet' type='text/css' href='src/css/main.css')
        link(rel='stylesheet' type='text/css' href='grid.css')
        link(rel='stylesheet' type='text/css' href='queries.css')
    body
        //h1 Week 1 - Assessment
        header
            #nav-buttons
                ul.main-nav
                    - var titles = ['Home', 'Users', 'Registration', 'Teams', 'Contacts']
                    each title in titles
                       li
                          if title == 'Users'
                              a.nav_users(href='/#') #{title}
                          else
                              a(href='/#') #{title}
                a.mobile-menu-icon
                    img.menu-icon(src='src/img/menu_icon.png' alt='Menu Icon' width='45' height='45')
        h3 Please Register:
        .section-form
          - var classes_first = ['span-1-of-7', 'form-label']
          - var classes_two = ['col', 'span-6-of-7']
          - var types = ['text', 'text', 'email', 'date']
          - var ids = ['first-name', 'surname', 'email', 'date-of-birth']
          - var labels = ['First Name', 'Surname', 'Email', 'Date']
          - var genders = ['female', 'male']
              form#registration-form(method='POST', action='#')
                  for label, index in labels
                      .row
                          .col(class=classes_first)
                              label(for=ids[index]) #{labels[index]}:
                          div(class=classes_two)
                              input.my-form(id=ids[index] type=types[index] placeholder=labels[index] required)
                  .row
                      .col(class=classes_first) Gender:
                      div(class=classes_two)
                          for gender, index in genders
                              label(for=genders[index] class='form-label form-radio') #{(genders[index]).toUpperCase()}:
                                  input.my-form(id=genders[index] type='radio' name='gender' value=genders[index] required)
                  .row
                      .col(class=classes_first)
                      div(class=classes_two class='form-label')
                          button#submit-button(type='submit' onClick='validateFields()') Register
        .section-features
            -var string_numbers = ['first', 'second', 'third']
            for number, index in string_numbers
                .section-items
                    .col.span-1-of-3
                        h3 My #{string_numbers[index]} section
                        p.
